<% layout("boilerplate") -%>
    <%- include("carousel.ejs") %>
        <% if (success && success.length) { %>
            <div class="alert alert-success alert-dismissible show" role="alert"
                style="display: flex; justify-content: space-between;">
                <%= success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>
                <% if (error && error.length) { %>
                    <div class="alert alert-success alert-dismissible show" role="alert"
                        style="display: flex; justify-content: space-between;">
                        <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>
                    <%- include("category.ejs")  %>
                    <!-- <hr> -->
                    <h2 style="margin: 40px; margin-top: 50px; text-align: center;">All Packages</h1>
                        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 w-100">
                            <% for (const package of packages) { %>
                                <%if(package.owner.verified){%>
                                <div class="link-card">
                                    <div class="patta card col" style="border: none; border-radius: 1rem; cursor: pointer;">
                                        <img src="<%= package.image %>" class="card-im" alt="Picture of package"
                                            style="height: 20rem;">
                                        <div class="card-body bgc">
                                            <h5 class="card-title">
                                                <%= package.destination %>
                                            </h5>
                                            <p class="card-text mt-4" style="font-weight: 600;">
                                                <%= package.price %> â‚¹ /
                                                    person
                                            </p>
                                            <p class="card-text mt-1" style="font-weight: 600;">
                                                <%= package.duration %>
                                            </p>
                                            <div class="flex-nav-right" style="gap: 15px;">
                                                <% if(package.trending) {%>
                                                  <a href="/trending" style="text-decoration: none; color: black;"><div class="trend out">
                                                        <img class="trend-logo" src="..//icons/trending.svg" alt="trending logo">
                                                        <div>Trending</div>
                                                    </div></a>
                                                    <% } %>
                                                    <% if(package.bestTimeToVisit) {%>
                                                    <div class="go-now">
                                                        <div><%= package.bestTimeToVisit %></div>
                                                    </div>
                                                    <% } %>
                                            </div>
                                        </div>
                                        <form action="/show/<%= package.id %>" style="display: flex; justify-content: center;">
                                            <button class="form-control out" style="text-align: center; font-weight: bolder; color: white; background-color: rgb(214, 132, 0); width: 100px; padding: 10px; border: none; border-radius: 10px;">Open</button>
                                        </form>
                                    </div>
                                </div><% } %>
                                <% } %>
                        </div>